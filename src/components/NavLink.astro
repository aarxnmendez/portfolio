---
import Icons from "@/components/Icons.astro";

interface Props {
  href: string;
  icon: "home" | "tools" | "experience" | "projects" | "education";
  label: string;
}

const { href, icon, label } = Astro.props;
---

<a href={href} class="relative group">
  <Icons name={icon} size={22} />
  <!-- Tooltip -->
  <span
    class="absolute left-1/2 -translate-x-1/2 top-2 opacity-0 group-hover:opacity-100 group-hover:top-8.5 transition-all duration-400 ease-in-out bg-surface/10 text-surface text-xs px-2.5 py-1 rounded-full whitespace-nowrap pointer-events-none z-10"
  >
    {label}
  </span>
</a>
