---
import "@/styles/global.css";
import Icons from "@/components/Icons.astro";

interface Props {
  lang?: "en" | "es";
}

const { lang = "en" }: Props = Astro.props;

const siteUrl: string = "http://localhost:4321";

// Availability status - Change this to control your current availability
const availabilityStatus: "available" | "listening" | "unavailable" = "listening";

// Availability styles configuration
const availabilityStyles = {
  available: {
    text: "text-green-800",
    bg: "bg-green-100",
    border: "border-green-800"
  },
  listening: {
    text: "text-amber-800", 
    bg: "bg-amber-100",
    border: "border-amber-800"
  },
  unavailable: {
    text: "text-red-800",
    bg: "bg-red-100", 
    border: "border-red-800"
  }
};

const currentStyles = availabilityStyles[availabilityStatus];

// Translations for layout content
const t = {
  en: {
    header: "This is the header",
    footer: "This is the footer",
    profileAlt: "Aaron Mendez - Web Developer",
    name: "Aaron Mendez",
    cardDescription: "Obsessed with details that make the difference.",
    availability: {
      available: "Available for work",
      listening: "Open to opportunities", 
      unavailable: "Not available"
    },
    mailTitle: "Send email to Aaron Mendez",
    mailLabel: "Send email to Aaron Mendez"
  },
  es: {
    header: "Este es el header", 
    footer: "Este es el footer",
    profileAlt: "Aarón Méndez - Desarrollador Web",
    name: "Aarón Méndez",
    cardDescription: "Obsesionado con los detalles que marcan la diferencia.",
    availability: {
      available: "Disponible para trabajar",
      listening: "Escucho ofertas",
      unavailable: "No disponible"
    },
    mailTitle: "Enviar correo a Aarón Méndez",
    mailLabel: "Enviar correo a Aarón Méndez"
  }
}[lang];

// Dynamic SEO content
interface SeoData {
  title: string;
  description: string;
  keywords: string;
  canonical: string;
}

// Record<K, V> creates an object type with keys "en"|"es" and values of type SeoData
const seoData: Record<"en" | "es", SeoData> = {
  en: {
    title: "Aaron Mendez - Web Developer",
    description:
      "Web Developer with expertise in PHP, JavaScript, React, and modern web technologies. Currently studying Computer Engineering and building innovative web solutions.",
    keywords:
      "web developer, javascript, php, react, html, css, mysql, tailwind, astro, typescript, wordpress, git, portfolio",
    canonical: siteUrl,
  },
  es: {
    title: "Aarón Méndez - Desarrollador Web",
    description:
      "Desarrollador Web con experiencia en PHP, JavaScript, React y tecnologías web modernas. Estudiante de Ingeniería Informática creando soluciones web innovadoras.",
    keywords:
      "desarrollador web, javascript, php, react, html, css, mysql, tailwind, astro, typescript, wordpress, git, portfolio",
    canonical: siteUrl + "/es",
  },
};

const currentSeo: SeoData = seoData[lang];
---

<!doctype html>
<html lang={lang} class="h-full bg-background text-surface">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts - Inter Variable and Alan Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,wght@0,100..900;1,100..900&family=Alan+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <meta name="generator" content={Astro.generator} />

    <!-- Dynamic SEO Meta Tags -->
    <title>{currentSeo.title}</title>
    <meta name="description" content={currentSeo.description} />
    <meta name="keywords" content={currentSeo.keywords} />
    <meta name="robots" content="index,follow" />
    <meta name="author" content="Aaron Mendez" />

    <!-- Canonical URL -->
    <link rel="canonical" href={currentSeo.canonical} />

    <!-- Hreflang for multilingual -->
    <link rel="alternate" hreflang="en" href={siteUrl} />
    <link rel="alternate" hreflang="es" href={siteUrl + "/es"} />
    <link rel="alternate" hreflang="x-default" href={siteUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:site_name" content="Aaron Mendez Portfolio" />
    <meta property="og:title" content={currentSeo.title} />
    <meta property="og:description" content={currentSeo.description} />
    <meta property="og:url" content={currentSeo.canonical} />
    <meta property="og:type" content="website" />
    <!-- <meta property="og:image" content={siteUrl + "/og-image.jpg"} /> -->

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={currentSeo.title} />
    <meta property="twitter:description" content={currentSeo.description} />
    <!-- <meta property="twitter:image" content={siteUrl + "/og-image.jpg"} /> -->
  </head>

  <body class="flex flex-col h-full">
    <header class="bg-warning">
      <p>{t.header}</p>
    </header>

    <main class="flex flex-1 flex-nowrap justify-center items-center px-10">
      <div class="flex flex-nowrap py-20 gap-12.5 xl:gap-25 w-full max-w-[1140px] h-full">
        <section class="flex w-min">
          <div class="flex flex-1 flex-col justify-between gap-5 py-7 px-5 h-fit w-85 bg-surface rounded-2xl card-pattern-overlay">
            <div class="flex flex-col justify-center items-center gap-5">
              <img 
                src="/aaron-profile.webp" 
                alt={t.profileAlt}
                class="w-60 h-70 rounded-2xl object-cover"
                loading="lazy"
              />
              <h2 class="!text-background text-center !text-4xl">
                {t.name}
              </h2>
              <p class="!text-background/70 !opacity-100 !text-lg text-center !font-medium">
                {t.cardDescription}
              </p>
              <div class={`inline-flex items-center justify-center px-3 py-1 w-full max-w-max text-sm rounded-full whitespace-nowrap ${currentStyles.text} ${currentStyles.bg} border ${currentStyles.border}`}>
                {t.availability[availabilityStatus]}
              </div>
              <a 
                href="mailto:aarxnmendezz@gmail.com" 
                title={t.mailTitle}
                class="text-background hover:underline"
                aria-label={t.mailLabel}
              >
                aarxnmendezz@gmail.com
              </a>
            </div>
          </div>
        </section>

        <section class="flex-1">
          <slot />
        </section>
      </div>
    </main>

    <footer class="bg-warning">
      <p>{t.footer}</p>
    </footer>
  </body>
</html>

<!-- Language Switcher -->
<script>
  // Get stored language preference
  const storedLang = localStorage.getItem("language");
  const currentPath = window.location.pathname;
  const isInSpanishPath = currentPath.startsWith("/es");
  const currentLang = isInSpanishPath ? "es" : "en";

  if (storedLang === null) {
    // First visit - detect browser language
    const preferredLang = navigator.language.startsWith("es") ? "es" : "en";
    localStorage.setItem("language", preferredLang);

    // Only redirect if we're on the wrong URL
    if (preferredLang !== currentLang) {
      if (preferredLang === "es") {
        window.location.href = "/es";
      } else {
        window.location.href = "/";
      }
    }
  } else {
    // Subsequent visit - use stored preference
    if (storedLang !== currentLang) {
      if (storedLang === "es") {
        window.location.href = "/es";
      } else {
        window.location.href = "/";
      }
    }
  }
</script>

<!-- JSON-LD structured data for search engines -->
<!-- Helps Google understand this is a Person's profile and may show rich snippets -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Aaron Mendez",
  "jobTitle": {lang === "es" ? "Desarrollador Web" : "Web Developer"},
  "url": {currentSeo.canonical},
  "knowsAbout": ["JavaScript", "PHP", "React", "Web Development"],
  "alumniOf": {lang === "es" ? "Técnico Superior en Desarrollo de Aplicaciones Web" : "Associate Degree in Web Development"}
}
</script>
