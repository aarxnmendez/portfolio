---
import "@/styles/global.css";
import Header from "@/components/layout/Header.astro";
import ProfileCard from "@/components/layout/ProfileCard.astro";
import Footer from "@/components/layout/Footer.astro";
import SEOHead from "@/components/layout/SEOHead.astro";

interface Props {
  lang?: "en" | "es";
}

const { lang = "en" }: Props = Astro.props;

const siteUrl: string = "http://localhost:4321";
---

<!doctype html>
<html lang={lang} class="h-full bg-background text-surface">
  <head>
    <SEOHead lang={lang} siteUrl={siteUrl} />
  </head>

  <body class="flex flex-col h-full">
    <Header lang={lang} />

    <main class="flex flex-1 flex-nowrap justify-center items-start px-10">
      <div
        class="flex flex-nowrap gap-12.5 xl:gap-25 w-full max-w-[1140px] min-h-full"
      >
        <ProfileCard lang={lang} />

        <section
          class="flex-1 flex flex-col gap-30 min-w-0 py-25 overflow-x-hidden"
        >
          <slot />
        </section>
      </div>
    </main>

    <Footer lang={lang} />
  </body>
</html>

<script src="@/scripts/lenis-scroll.ts"></script>
<script src="@/scripts/language-preference.ts"></script>
<script src="@/scripts/language-switcher.ts"></script>
